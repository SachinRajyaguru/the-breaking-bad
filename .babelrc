{
  "plugins": [
    [
      "module-resolver",
      {
        "root": ["./src"],
        "extensions": [
          ".ios.ts",
          ".android.ts",
          ".ts",
          ".ios.tsx",
          ".android.tsx",
          ".tsx",
          ".jsx",
          ".js",
          ".json"
        ],
        "alias": {
          "@assets": "./src/assets",
          "@common": "./src/common",
          "@components": "./src/components",
          "@navigation": "./src/navigation",
          "@redux": "./src/redux",
          "@screens": "./src/screens",
          "@theme": "./src/theme"
        }
      }
    ]
  ]
}
